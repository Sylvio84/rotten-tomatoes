{% extends 'base.html.twig' %}

{% block title %}Connexion Ã  l'application
{% endblock %}

{% block body %}

    <div class="example-wrapper">
        <h1>Connexion</h1>

        <form action="" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="form-group">
                <label for="username">Adresse e-mail</label>
                <input class="form-control" id="username" name="_username" placeholder="Votre adresse e-mail" type="email">
                {% if errors._username is defined %}
                    <small class="text-danger">{{errors._username }}</small>
                {% endif %}
            </div>
            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input class="form-control" id="password" name="_password" placeholder="Votre mot de passe" type="password">
            </div>
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-user"></i>
                Connexion</button>

            <a class="btn btn-link" href="{{ path('account_register') }}">
                <i class="fas fa-user"></i>
                Je n'ai pas encore de compte
            </a>
        </form>

    </div>
{% endblock %}
